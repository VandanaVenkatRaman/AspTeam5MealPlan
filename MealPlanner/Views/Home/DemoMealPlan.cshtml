@using MealPlanner.Models
@model MealPlanner.Models.MealPlan

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Home | Meal Planner</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/meal-planner.js"></script>
    <style>
        .header-image {
            position: relative;
            height: auto;
            width: 100%;
            overflow: hidden;
        }

        img {
            position: relative;
            width: 100%;
            max-height: 200px;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <h1>Demo Meal Plan</h1>

    @{ 
        foreach (var m in Model.Meals)
        {
            <h2>@m.Title</h2>
            <h3>Ready in (minutes): @m.ReadyInMinutes</h3>
            <h3>Serves: @m.ReadyInMinutes</h3>
            <h3>ID: @m.Id</h3>
            <img src=@m.Image>
        }
    }
</body>
</html>