
@{
    ViewBag.Title = "DailyPlan";
}

<div style="background-color: #f1f7fc;">
    <div class="container">
        
        <div class="row">
            <div class="col-sm-1 col-md-2 col-lg-2"></div>
            <div class="col-sm-10 col-md-8 col-lg-8">
                <h1 class="text-center">Your Daily Meal Plan</h1>
                <div class="card" style="margin-bottom: 10px;">
                    <div class="card-body">
                        <h4 class="card-title">Breakfast</h4>
                        <h6 class="text-muted card-subtitle mb-2">Meal Title</h6>
                        <p class="card-text">Ready in X minutes</p>
                        <p class="card-text">Serves Y</p>
                    </div>
                </div>
                <div class="card" style="margin-bottom: 10px;">
                    <div class="card-body">
                        <h4 class="card-title">Lunch</h4>
                        <h6 class="text-muted card-subtitle mb-2">Meal Title</h6>
                        <p class="card-text">Ready in X minutes</p>
                        <p class="card-text">Serves Y</p>

                    </div>
                </div>
                <div class="card" style="margin-bottom: 10px;">
                    <div class="card-body">
                        <h4 class="card-title">Dinner</h4>
                        <h6 class="text-muted card-subtitle mb-2">Meal Title</h6>
                        <p class="card-text">Ready in X minutes</p>
                        <p class="card-text">Serves Y</p>

                    </div>
                </div>

                <div class="card" style="margin-bottom: 10px;">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-6">
                                <input type="button" id="regenerateButton" class="btn btn-primary btn-block" value="Re-generate" />
                            </div>
                            <div class="col-6">
                                <input type="button" id="saveButton" class="btn btn-primary btn-block" value="Save Plan" />

                            </div>
                        </div>


                    </div>
                </div>
            </div>
            <div class="col"></div>
            
        </div>
    </div>
</div>

