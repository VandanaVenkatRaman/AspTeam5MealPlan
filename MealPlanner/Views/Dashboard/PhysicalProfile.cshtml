
@{
    ViewBag.Title = "PhysicalProfile";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/popper.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/meal-planner.js"></script>
    <title>Dashboard | Physical Profile</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <label class="col-2">What do you want to do?</label>
        <input type="radio" id="loseWeight" name="weight" class="col-sm-1" checked/>Lose Weight
        <input type="radio" id="maintainWeight" name="weight" class="col-sm-1"/>Maintain Weight<br/>
        <br />
        <label class="col-2">Gender:</label>
        <input type="radio" id="genderMale" name="gender" class="col-sm-1"/>Male
        <input type="radio" id="genderFemale" name="gender" class="col-sm-1" />Female<br/>
        <br />
        <label class="col-2">Height:</label>
        <input type="text" id="heightFeet" class="col-1" />feet
        <input type="text" id="heightInches" class="col-1" />inches<br/>
        <br />
        <label class="col-2">Weight:</label>
        <input type="text" id="weight" class="col-3" /><br/>
        <br />
        <label class="col-2">Age:</label>
        <input type="text" id="age" class="col-3" /><br/>
        <br />
        <label class="col-2">Activity Level:</label>
        <select id="activityLevel" class="col-3">
            <option val="1">Sedentary</option>
            <option val="2">Lightly Active</option>
            <option val="3" selected>Moderately Active</option>
            <option val="4">Very Active</option>
            <option val="5">Extremely Active</option>
        </select>
        <br />
        <div id="lossGoals">
            <label class="col-2">Weight Goal:</label>
            <input type="text" id="weightGoal" class="col-3" /><br />
            <br />
            <label class="col-2">Days to reach weight goal:</label>
            <input type="text" id="daysToGoal" class="col-3" /><br />
        </div>
    </div>
        <div class="container p-5">
            <button class="btn btn-primary col-1">Save</button>
            <button class="btn btn-danger col-1">Cancel</button>
        </div>
</body>
</html>


