@model IEnumerable<MealPlanner.Models.BodyStats>

@{
    ViewBag.Title = "BodyStats";
}
<div style="font-family:Arial">
   
        <h2>My Body Stat History</h2>

        <p class="col-5">
            
            @Html.ActionLink("Add Your Newest Body Status", "AddBodyStatus", new { id = ViewBag.data}, new { @class = "btn btn-primary btn-block"})
        </p>

        <table class="table">
            <tr>


                <th>
                    Height (Ft)
                </th>
                <th>
                    Height (In)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Weight)
                </th>
                <th>
                   Target Weight
                </th>
                <th>
                   Target Calories
                </th>
                <th>
                   Target Days
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BMI)
                </th>
                <th>
                    Activity Level
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.AddDate)
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                using (Html.BeginForm("DeletebodyStats", "Dashboard", new { id = item.BodyStatId }))
                {

         
            <tr>


                <td>
                    @Html.DisplayFor(modelItem => item.HeightFeet)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HeightInches)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Weight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetWeight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetCalories)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TargetDays)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BMI)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>


                <td>
                    @Html.DisplayFor(modelItem => item.AddDate)
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditBodyStats", new { bodyStatId = item.BodyStatId }) |

                    <input type="submit" value="Delete" onclick="return confirm('Are you sure you want to delete record with ID= @item.BodyStatId');" />
                </td>
            </tr>
                }
            }

        </table>
    </div>
